<Window x:Class="ToDoApp.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoApp.Views"
        mc:Ignorable="d"
        Title="InputDialog" Height="150" Width="300" Background="#FF383838">
    <StackPanel Margin="10">
        <TextBlock Text="{Binding Message}" Margin="0,0,0,10"/>
        <TextBox Text="{Binding ResponseText}" Width="250"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
            <Button Content="OK" Width="75" Margin="5" IsDefault="True" Click="OK_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
